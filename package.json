{
  "name": "ricard-torres-reviews",
  "private": true,
  "description": "TV Shows and Movies reviews",
  "version": "3.0.0",
  "author": "Ricard Torres <torres.rick@gmail.com>",
  "type": "module",
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "build:content": "node backend/main.js",
    "build:assets": "npm run build:css && npm run build:html && npm run build:js",
    "build:css": "sass src/scss/main.scss dist/css/main.css --style=compressed --no-source-map",
    "build:html": "node html.js",
    "build:js": "esbuild src/js/main.js --bundle --minify --outfile=dist/js/main.js",
    "watch:css": "sass src/scss/main.scss dist/css/main.css --watch",
    "watch:js": "esbuild src/js/main.js --bundle --outfile=dist/js/main.js --watch",
    "watch:test": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint 'src/js/**/*.js'"
  },
  "dependencies": {
    "@sindresorhus/slugify": "2.1.0",
    "markdown-it": "^13.0.1",
    "esbuild": "^0.15.0",
    "sass": "^1.54.4"
  },
  "devDependencies": {
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.2",
    "jest": "^28.1.3",
    "prettier": "2.7.1"
  },
  "homepage": "https://quicoto.github.io/reviews/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quicoto/reviews.git"
  }
}
